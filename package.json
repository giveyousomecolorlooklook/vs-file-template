{
  "author": "chentp0601",
  "repository": {
    "type": "git",
    "url": "https://github.com/giveyousomecolorlooklook/vs-file-template"
  },
  "name": "vs-file-template",
  "displayName": "vs-file-template",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "文件模板",
      "properties": {
        "vs-file-template.templatePath": {
          "type": "string",
          "default": "",
          "description": "模板文件存放路径"
        }
      }
    },
    "commands": [
      {
        "command": "vs-file-template.insert",
        "title": "插入模板",
        "category": "文件模板"
      },
      {
        "command": "vs-file-template.import",
        "title": "导入模板",
        "category": "文件模板"
      },
      {
        "command": "vs-file-template.new",
        "title": "从模板新建文件",
        "category": "文件模板"
      },
      {
        "command": "vs-file-template.btn",
        "title": "文件模板管理",
        "category": "文件模板"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vs-file-template.insert",
          "group": "navigation@1",
          "when": "editorTextFocus"
        }
      ],
      "explorer/context": [
        {
          "command": "vs-file-template.import",
          "group": "navigation@1"
        },
        {
          "command": "vs-file-template.new",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.92.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
